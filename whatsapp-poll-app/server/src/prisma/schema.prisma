model User {
  id        String   @id @default(cuid())
  firstName String
  votes     Vote[]
}

model Poll {
  id        String   @id @default(cuid())
  question  String
  votes     Vote[]
}

model Vote {
  id      String @id @default(cuid())
  userId  String
  pollId  String
  value   Boolean
  user    User   @relation(fields: [userId], references: [id])
  poll    Poll   @relation(fields: [pollId], references: [id])
}